---
layout: page
---

<div class="post">
  <article>
    {% for profile in site.data.people %}
      <hr>

      {% if profile.role %}
        <h2 style="font-size: 1.8rem; font-weight: bold; margin-bottom: 0.5rem;">{{ profile.role }}</h2>
      {% endif %}

      <div style="display: flex; align-items: center; margin-bottom: 2rem;">
        {% if profile.image %}
          {% assign profile_image_path = profile.image | prepend: 'assets/img/' %}
          {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
          
          <div style="flex-shrink: 0; width: 200px; height: 260px; overflow: hidden; margin-right: 1.5rem;">
            {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px) 30vw, 95vw"{% endcapture %}
            {% include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=profile.image style="object-fit: cover; width: 100%; height: 100%;" %}
          </div>
        {% endif %}

        <div style="flex-grow: 1;">
          <div style="font-size: 1.3rem; color: #1a73e8; font-weight: 500;">
            {{ profile.name }}
            {% if profile.website %}
              (<a href="{{ profile.website }}" target="_blank">website</a>)
            {% endif %}
          </div>
          {% if profile.position %}
            <div>{{ profile.position }}</div>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </article>
</div>
