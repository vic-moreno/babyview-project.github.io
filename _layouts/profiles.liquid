---
layout: default
title: People
permalink: /people
---

<div class="peoplelayout">

  {% assign roles = site.data.people | group_by: "role" %}

  {% for role_group in roles %}
    <h1 style="margin-top: 2rem;">{{ role_group.name }}</h1>
    <div class="role-group" style="display: flex; flex-wrap: wrap; gap: 2rem;">

      {% for person in role_group.items %}
        <div class="member" style="display: flex; align-items: center; max-width: 600px;">
          
          {% if person.image %}
            <img 
              src="{{ '/assets/img/' | append: person.image }}" 
              alt="{{ person.name }}" 
              style="width: 200px; height: 260px; object-fit: cover; margin-right: 1rem; border-radius: 5px;"
            >
          {% endif %}
          
          <div>
            <div style="font-size: 1.3rem; font-weight: 600; color: #1a73e8;">
              {{ person.name }}
              {% if person.website %}
                (<a href="{{ person.website }}" target="_blank" rel="noopener">website</a>)
              {% endif %}
            </div>
            {% if person.position %}
              <div style="font-style: italic; margin-top: 0.3rem;">{{ person.position }}</div>
            {% endif %}
          </div>
          
        </div>
      {% endfor %}
    </div>
  {% endfor %}

</div>
